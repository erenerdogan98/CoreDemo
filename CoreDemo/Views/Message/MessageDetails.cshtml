@using Entities.Concrete
@model Message2

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~Views/Shared/WriterLayout.cshtml";
}

<h1>Message Details Page</h1>
@Html.Label("Message ID")
@Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
<br />
@Html.Label("Message Title")
@Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
<br />
@Html.Label("Message Details")
@Html.TextAreaFor(x => x.Details, 10, 3, new { @class = "form-control" })
<br />
<button class="btn btn-success">Back Messages</button>