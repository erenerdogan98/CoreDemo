@model AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Writer Edit Profile</h4>
                <br />
                @Html.HiddenFor(x => x.ID, new { @class = "form-control" })
                <p class="card-description"> Basic form elements </p>
                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Writer Name</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Email address</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Password</label>
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Writer Image</label>
                        <input type="file" name="WriterImage"/>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">About Writer</label>
                        @Html.TextAreaFor(x => x.About, 10, 3, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Update</button>
                    <button class="btn btn-light">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</form>